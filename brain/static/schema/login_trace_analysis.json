{
    "type": "object",
    "title": "Login Trace Analysis",
    "properties": {
        "scan_config": {
            "type": "object",
            "title": "Scan Configuration",
            "oneOf": [
                {
                    "title": "Scan on a single task",
                    "properties": {
                        "scan_id": {
                            "type": "string",
                            "required": true,
                            "default": "",
                            "options": {
                                "hidden": true
                            }
                        },
                        "scan_type": {
                            "type": "string",
                            "required": true,
                            "enum": [
                                "task"
                            ],
                            "options": {
                                "hidden": true
                            }
                        },
                        "target_task_id": {
                            "type": "string",
                            "required": true,
                            "title": "Target Task ID"
                        }
                    }
                },
                {
                    "title": "Scan on multiple tasks in a scan",
                    "properties": {
                        "scan_id": {
                            "type": "string",
                            "required": true,
                            "default": "",
                            "options": {
                                "hidden": true
                            }
                        },
                        "scan_type": {
                            "type": "string",
                            "required": true,
                            "enum": [
                                "scan"
                            ],
                            "options": {
                                "hidden": true
                            }
                        },
                        "target_scan_id": {
                            "type": "string",
                            "required": true,
                            "title": "Target Scan ID"
                        }
                    }
                },
                {
                    "title": "Scan on multiple scans in a tag",
                    "properties": {
                        "scan_id": {
                            "type": "string",
                            "required": true,
                            "default": "",
                            "options": {
                                "hidden": true
                            }
                        },
                        "scan_type": {
                            "type": "string",
                            "required": true,
                            "enum": [
                                "tag"
                            ],
                            "options": {
                                "hidden": true
                            }
                        },
                        "target_tag_name": {
                            "type": "string",
                            "required": true,
                            "title": "Target Tag Name"
                        }
                    }
                }
            ]
        },
        "login_trace_analysis_config": {
            "type": "object",
            "title": "Login Trace Analysis Configuration",
            "properties": {
                "idp_credentials": {
                    "type": "array",
                    "required": true,
                    "title": "IdP Credentials",
                    "items": {
                        "type": "object",
                        "required": true,
                        "properties": {
                            "idp_name": {
                                "type": "string",
                                "required": true,
                                "title": "IdP Name",
                                "enum": [
                                    "GOOGLE",
                                    "APPLE",
                                    "FACEBOOK",
                                    "TWITTER_1.0",
                                    "LINKEDIN",
                                    "MICROSOFT",
                                    "BAIDU",
                                    "GITHUB",
                                    "QQ",
                                    "SINA_WEIBO",
                                    "WECHAT",
                                    "PASSKEY",
                                    "MFA_GENERIC", 
                                    "USERNAME_PASSWORD",
                                    "NAVIGATOR_CREDENTIALS"
                                ]
                            },
                            "idp_username": {
                                "type": "string",
                                "required": true,
                                "title": "IdP Username"
                            },
                            "idp_password": {
                                "type": "string",
                                "required": true,
                                "title": "IdP Password"
                            },
                            "idp_cookie_store": {
                                "type": "string",
                                "required": true,
                                "title": "IdP Cookie Store",
                                "default": "[]"
                            }
                        }
                    }
                }
            }
        },
        "analysis_results": {
            "type": "object",
            "title": "Authentication Detection Results",
            "properties": {
                "detected_methods": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "SSO",
                            "USERNAME_PASSWORD", 
                            "MFA",
                            "NAVIGATOR_CREDENTIALS"
                        ]
                    }
                },
                "username_password_forms": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "form_location": {"type": "string"},
                            "input_count": {"type": "number"}
                        }
                    }
                },
                "mfa_implementations": {
                    "type": "array", 
                    "items": {
                        "type": "object",
                        "properties": {
                            "mfa_type": {"type": "string"},
                            "implementation": {"type": "string"}
                        }
                    }
                },
                "stored_credentials": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "credential_type": {"type": "string"},
                            "source": {"type": "string"}
                        }
                    }
                }
            }
        }
    }
}
